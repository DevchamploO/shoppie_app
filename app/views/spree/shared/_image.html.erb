<% size ||= :large %>
<% itemprop ||= nil %>

<% if image_url = image.try(:url, :large)  %>
	  <% if image_alt = image.try(:alt) %>
		      <%= image_tag image_url, alt: image_alt, itemprop: itemprop %>
		        <% else %>
				    <%= image_tag image_url, itemprop: itemprop %>
				      <% end %>
			      <% else %>
					        <span class="image-placeholder <%= :large %>"></span>
					<% end %>
